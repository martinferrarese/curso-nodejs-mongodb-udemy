<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs'); %>
  <body>
    <%- include('./partials/navbar.ejs'); %>
    <div class="container">
        <h3>Detalles del Ã­tem</h3>
        <h4>Nombre: <%= item.name %> </h4>
        <h4>Precio: $<%= item.price %> </h4>
        <a id="btnDelete" class="waves-effect waves-light btn" data-id="<%=item._id%>" href="">BORRAR</a>
    </div>
  </body>
  <script>
      btnDelete.onclick = (e) => {
        e.preventDefault();
        const id = btnDelete.dataset.id;
        const endpoint = `/delete-item/${id}`;
        fetch(endpoint, {
            method: 'DELETE'
        }).then(res => res.json())
        .then(data => {
            console.log(data);
            window.location.href = data.redirect})
        .catch(err => console.log(err))
      }
  </script>
</html>