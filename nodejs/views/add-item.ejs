<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs'); %>
  <body>
    <%- include('./partials/navbar.ejs'); %>
    <div class="container">
      <div class="row">
        <form class="col s12" action="/create-new-item" method="POST">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">shop</i>
              <input id="nombre-item" type="text" class="validate" name="name">
              <label for="nombre-item">Nombre</label>
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix">attach_money</i>
              <input id="precio-item" type="tel" class="validate" name="price">
              <label for="precio-item">Precio</label>
            </div>
          </div>
          <button class="waves-effect waves-light btn">Agregar</button>
        </form>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        M.updateTextFields();
      });
    </script>
  </body>
</html>